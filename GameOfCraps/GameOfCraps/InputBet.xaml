<Window x:Class="GameOfCraps.InputBet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfCraps"
        mc:Ignorable="d"
        Title="InputBet" Height="127.811" Width="300" Background="{StaticResource WindowImage}">
    <Grid>
        <TextBlock Text="Enter Starting Bank Balance" Foreground="Gold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,10,10"/>
        <TextBox x:Name="bankBalance" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Margin="10,10,10,10"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OKButton_Click" Width="100" Margin="10,10,10,10"/>
    </Grid>
</Window>
